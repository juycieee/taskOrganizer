@page
@model TaskOrganizer.Pages.AssignTaskModel
@{
    ViewData["Title"] = "Assign New Task";
    // I-set ang Layout sa null para walang default margin/container.
    Layout = null;
}

<script src="https://cdn.tailwindcss.com"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-dcZ6a6u+QHbX5gP0F0ZQ/5DwC1ElGfFY7u1y6m3Oa4k5+HxJ9y8Lzr/6qImQnP+mF8xA6djLM0h+4q45X+3xKw==" crossorigin="anonymous" referrerpolicy="no-referrer" />

<style>
    body, html {
        margin: 0 !important;
        padding: 0 !important;
        height: 100%;
        width: 100%;
        overflow: hidden;
    }

    .color-primary {
        background-color: #850E35;
    }
    .color-secondary {
        background-color: #EE6983;
    }
    .color-accent {
        background-color: #FFC4C4;
    }
    .color-light {
        background-color: #FCF5EE;
    }

    .text-primary {
        color: #850E35;
    }

    .text-secondary {
        color: #EE6983;
    }

    .custom-scrollbar::-webkit-scrollbar {
        width: 8px;
    }

    .custom-scrollbar::-webkit-scrollbar-thumb {
        background-color: #850E35;
        border-radius: 20px;
    }

    .sidebar-bg {
        background-color: #850E35;
    }

    .main-bg {
        background-color: #FCF5EE;
    }
    .card-bg {
        background-color: white;
    }

    .header-card {
        background-color: white;
        border-top: 4px solid #EE6983;
    }

    .sidebar-link-text {
        font-size: 1.05rem; /* SLIGHTLY LARGER LINKS */
        font-weight: 500;
    }


    .active-link {
        background-color: #EE6983;
        color: white;
        border-left: 4px solid #FFC4C4;
        padding-left: 20px;
    }

        .active-link span { 
            margin-left: -4px;
        }

    .hover-link:hover {
        background-color: #EE6983;
        opacity: 0.9;
    }

    .admin-btn {
        background-color: #FFC4C4;
        color: #850E35;
        font-weight: bold;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        border: 1px solid #EE6983;
    }

        .admin-btn:hover {
            background-color: #EE6983;
            color: white;
        }

    .assign-btn {
        background-color: #EE6983; 
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }

        .assign-btn:hover {
            background-color: #850E35;
        }

    .icon-color {
        color: #850E35; 
    }

    .focus-ring-primary:focus {
        border-color: #EE6983; 
        box-shadow: 0 0 0 3px rgba(238, 105, 131, 0.4); 
    }

    .modal-backdrop {
        background-color: rgba(0, 0, 0, 0.6);
    }
</style>

<div class="flex h-screen w-screen overflow-hidden">

    <div class="sidebar-bg w-64 text-white p-4 flex flex-col flex-shrink-0">
        <div class="mb-8 p-2 flex items-center gap-3">
            <i class="fas fa-user-shield text-2xl"></i>
            <div>
                <h1 class="text-2xl font-bold">Admin Panel</h1>
                <p class="text-base opacity-80">Task Manager</p>
            </div>
        </div>

        <nav class="space-y-2 flex-grow">
            <a href="/AdminDashboard" class="flex items-center space-x-3 px-4 py-3 rounded-xl hover-link transition duration-150">
                <i class="fas fa-chart-line w-5"></i>
                <span class="sidebar-link-text">Overview</span>
            </a>

            <a href="/EmployeeManagement" class="flex items-center space-x-3 px-4 py-3 rounded-xl hover-link transition duration-150">
                <i class="fas fa-users w-5"></i>
                <span class="sidebar-link-text">Employees</span>
            </a>

            <a href="/AllTasks" class="flex items-center space-x-3 px-4 py-3 rounded-xl hover-link transition duration-150">
                <i class="fas fa-list-ul w-5"></i>
                <span class="sidebar-link-text">All Tasks</span>
            </a>

            <a href="/AssignTask" class="flex items-center space-x-3 py-3 rounded-xl active-link">
                <i class="fas fa-plus-circle w-5"></i>
                <span class="sidebar-link-text">Assign Task</span>
            </a>
        </nav>

        <div class="mt-auto">
            <a href="#" onclick="showLogoutModal(event)" class="flex items-center space-x-3 px-4 py-3 rounded-xl hover-link transition duration-150 text-white/80 hover:bg-white/20">
                <i class="fas fa-sign-out-alt w-5"></i>
                <span class="sidebar-link-text font-semibold">Logout</span>
            </a>
        </div>
    </div>
    <div class="flex-1 main-bg p-8 overflow-y-auto custom-scrollbar">

        <div class="flex justify-between items-center mb-8 flex-shrink-0 header-card p-6 rounded-xl shadow-lg">
            <div>
                <h1 class="text-4xl font-bold text-gray-800">Assign New Task</h1>
                <p class="text-lg text-gray-500">@DateTime.Now.ToString("dddd, MMMM dd, yyyy")</p>
            </div>
            <button class="admin-btn text-lg px-5 py-2 rounded-lg font-semibold transition duration-150 flex items-center gap-2 shadow-md">
                <i class="fas fa-user-shield"></i> Admin
            </button>
        </div>

        <div class="card-bg p-8 rounded-xl shadow-lg">
            <div class="flex items-center gap-3 mb-6 pb-4 border-b">
                <i class="fas fa-plus-circle text-4xl icon-color"></i> <div>
                    <h2 class="text-3xl font-bold text-gray-800">New Task Details</h2> <p class="text-base text-gray-500">Create and assign tasks to employees</p>
                </div>
            </div>

            <form method="post" class="space-y-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

                    <div>
                        <label for="employee" class="block text-base font-bold text-gray-700 mb-1">Assign to Employee</label>
                        <select id="employee" name="employee" class="mt-1 block w-full px-4 py-3 text-base border border-gray-300 rounded-md shadow-sm focus:outline-none focus-ring-primary appearance-none cursor-pointer">
                            <option value="">Select Employee</option>
                            <option value="1">Juana Dela Cruz</option>
                            <option value="2">Pedro Manalo</option>
                            <option value="3">Rhea Santos</option>
                        </select>
                    </div>

                    <div>
                        <label for="priority" class="block text-base font-bold text-gray-700 mb-1">Priority Level</label>
                        <select id="priority" name="priority" class="mt-1 block w-full px-4 py-3 text-base border border-gray-300 rounded-md shadow-sm focus:outline-none focus-ring-primary appearance-none cursor-pointer">
                            <option value="Medium" selected>Medium Priority</option>
                            <option value="High">High Priority</option>
                            <option value="Low">Low Priority</option>
                        </select>
                    </div>
                </div>

                <div>
                    <label for="title" class="block text-base font-bold text-gray-700 mb-1">Task Title</label>
                    <input type="text" id="title" name="title" class="mt-1 block w-full p-3 text-base border border-gray-300 rounded-md shadow-sm focus:ring-primary focus-ring-primary" placeholder="Enter task title (e.g., Q3 Marketing Report)" required />
                </div>

                <div>
                    <label for="description" class="block text-base font-bold text-gray-700 mb-1">Task Description</label>
                    <textarea id="description" name="description" rows="5" class="mt-1 block w-full p-4 text-base border border-gray-300 rounded-md shadow-sm focus:ring-primary focus-ring-primary resize-none" placeholder="Enter detailed task description..." required></textarea>
                </div>

                <div>
                    <label for="due_date" class="block text-base font-bold text-gray-700 mb-1">Due Date</label>
                    <input type="date" id="due_date" name="due_date" class="mt-1 block w-full p-3 text-base border border-gray-300 rounded-md shadow-sm focus:ring-primary focus-ring-primary" />
                </div>

                <div class="pt-4">
                    <button type="submit" class="assign-btn w-full flex justify-center items-center py-3 px-4 border border-transparent rounded-md shadow-lg text-xl font-semibold text-white transition duration-150">
                        <i class="fas fa-check-circle mr-2"></i> Assign Task to Employee
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<div id="logoutModal" class="fixed inset-0 z-50 hidden modal-backdrop flex items-center justify-center transition-opacity duration-300 ease-out">
    <div class="bg-white p-8 rounded-xl shadow-2xl w-full max-w-sm transform transition-all duration-300 ease-out scale-95">
        <div class="text-center mb-6">
            <div class="flex justify-center mb-3">
                <i class="fas fa-exclamation-triangle text-primary text-4xl"></i>
            </div>
            <h4 class="text-xl font-bold text-gray-800 mb-1">Are you sure?</h4>
            <p class="text-base text-gray-500">You will be redirected to the login page.</p>
        </div>
        <div class="space-y-3">
            <a href="/Login" class="block w-full text-center color-primary text-white py-2 rounded-lg font-semibold hover:bg-secondary transition duration-150">
                Yes, Log out
            </a>
            <button onclick="hideLogoutModal()" class="block w-full text-center border-2 border-gray-300 text-gray-700 py-2 rounded-lg font-semibold hover:bg-gray-100 transition duration-150">
                Cancel
            </button>
        </div>
    </div>
</div>

<script>
    const modal = document.getElementById('logoutModal');

    function showLogoutModal(event) {
        event.preventDefault();
        modal.classList.remove('hidden');
    }

    function hideLogoutModal() {
        modal.classList.add('hidden');
    }
</script>