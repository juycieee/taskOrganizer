<script src="https://cdn.tailwindcss.com"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-dcZ6a6u+QHbX5gP0F0ZQ/5DwC1ElGfFY7u1y6m3Oa4k5+HxJ9y8Lzr/6qImQnP+mF8xA6djLM0h+4q45X+3xKw==" crossorigin="anonymous" referrerpolicy="no-referrer" />

<style>
    /* ❗ CSS RESET - PARA MA-SURE NA NAKADIKIT SA GILID ❗ */
    body, html {
        margin: 0 !important;
        padding: 0 !important;
        height: 100%;
        width: 100%;
        overflow: hidden;
    }

    .color-primary {
        background-color: #850E35;
    }
    /* Dark Maroon */
    .color-secondary {
        background-color: #EE6983;
    }
    .color-accent {
        background-color: #FFC4C4;
    }
    .color-light {
        background-color: #FCF5EE;
    }

    .text-primary {
        color: #850E35;
    }

    .text-secondary {
        color: #EE6983;
    }

    .custom-scrollbar::-webkit-scrollbar {
        width: 8px;
    }

    .custom-scrollbar::-webkit-scrollbar-thumb {
        background-color: #850E35; 
        border-radius: 20px;
    }

    /* GENERAL STYLING */
    .sidebar-bg {
        background-color: #850E35;
    }

    .main-bg {
        background-color: #FCF5EE;
    }

    .card-bg {
        background-color: white;
    }

    .sidebar-link-text {
        font-size: 1.05rem;
        font-weight: 500;
    }

    .table-cell-text {
        font-size: 1.05rem; 
    }

    .table-header-text {
        font-size: 0.9rem;
        font-weight: 700; 
    }

    .active-link {
        background-color: #EE6983;
        color: white;
        border-left: 4px solid #FFC4C4;
        padding-left: 20px;
    }

    .hover-link:hover {
        background-color: #EE6983;
        opacity: 0.9;
    }

    .admin-btn {
        background-color: #FFC4C4;
        color: #850E35;
        font-weight: bold;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        border: 1px solid #EE6983;
    }

        .admin-btn:hover {
            background-color: #EE6983;
            color: white;
        }

    .role-badge {
        background-color: #FCF5EE; 
        color: #850E35; 
        border: 1px solid #FFC4C4;
        font-size: 1rem; 
    }

    .action-icon {
        color: #EE6983;
    }

        .action-icon:hover {
            color: #850E35;
        }

    .header-card {
        background-color: white;
        border-top: 4px solid #EE6983;
    }

    .modal-backdrop {
        background-color: rgba(0, 0, 0, 0.6);
    }
</style>

