@page
@model TaskOrganizer.Pages.AdminDashboardModel
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = null;
}

<script src="https://cdn.tailwindcss.com"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-dcZ6a6u+QHbX5gP0F0ZQ/5DwC1ElGfFY7u1y6m3Oa4k5+HxJ9y8Lzr/6qImQnP+mF8xA6djLM0h+4q45X+3xKw==" crossorigin="anonymous" referrerpolicy="no-referrer" />

<style>
    body, html {
        margin: 0 !important;
        padding: 0 !important;
        height: 100%;
        width: 100%;
        overflow: hidden;
    }

    .color-primary {
        background-color: #850E35;
    }
    .color-secondary {
        background-color: #EE6983;
    }
    .color-accent {
        background-color: #FFC4C4;
    }
    .color-light {
        background-color: #FCF5EE;
    }

    .text-primary {
        color: #850E35;
    }

    .text-secondary {
        color: #EE6983;
    }

    .custom-scrollbar::-webkit-scrollbar {
        width: 8px;
    }

    .custom-scrollbar::-webkit-scrollbar-thumb {
        background-color: #850E35; 
        border-radius: 20px;
    }

    /* GENERAL STYLING */
    .sidebar-bg {
        background-color: #850E35;
    }

    .main-bg {
        background-color: #FCF5EE;
    }

    .card-bg {
        background-color: white;
    }

    .sidebar-link-text {
        font-size: 1.05rem; 
        font-weight: 500;
    }

    .active-link {
        background-color: #EE6983;
        color: white;
        border-left: 4px solid #FFC4C4;
        padding-left: 20px;
    }

    .hover-link:hover {
        background-color: #EE6983;
        opacity: 0.9;
    }

    .admin-btn {
        background-color: #FFC4C4;
        color: #850E35;
        font-weight: bold;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        border: 1px solid #EE6983;
    }

        .admin-btn:hover {
            background-color: #EE6983;
            color: white;
        }

    .border-primary {
        border-color: #850E35;
    }

    .text-primary-icon {
        color: #850E35;
    }

    .modal-backdrop {
        background-color: rgba(0, 0, 0, 0.6);
    }
</style>

<div class="flex h-screen w-screen overflow-hidden">

    <div class="sidebar-bg w-64 text-white p-4 flex flex-col flex-shrink-0">
        <div class="mb-8 p-2 flex items-center gap-3">
            <i class="fas fa-user-shield text-2xl"></i>
            <div>
                <h1 class="text-2xl font-bold">Admin Panel</h1>
                <p class="text-base opacity-80">Task Manager</p>
            </div>
        </div>

        <nav class="space-y-2 flex-grow">
            <a href="/AdminDashboard" class="flex items-center space-x-3 py-3 rounded-xl active-link">
                <i class="fas fa-chart-line w-5"></i>
                <span class="sidebar-link-text">Overview</span>
            </a>

            <a href="/EmployeeManagement" class="flex items-center space-x-3 px-4 py-3 rounded-xl hover-link transition duration-150">
                <i class="fas fa-users w-5"></i>
                <span class="sidebar-link-text">Employees</span>
            </a>

            <a href="/AllTasks" class="flex items-center space-x-3 px-4 py-3 rounded-xl hover-link transition duration-150">
                <i class="fas fa-list-ul w-5"></i>
                <span class="sidebar-link-text">All Tasks</span>
            </a>

            <a href="/AssignTask" class="flex items-center space-x-3 px-4 py-3 rounded-xl hover-link transition duration-150 mb-4">
                <i class="fas fa-plus-circle w-5"></i>
                <span class="sidebar-link-text">Assign Task</span>
            </a>
        </nav>

        <div class="mt-auto">
            <a href="#" onclick="showLogoutModal(event)" class="flex items-center space-x-3 px-4 py-3 rounded-xl hover-link transition duration-150 text-white/80 hover:bg-white/20">
                <i class="fas fa-sign-out-alt w-5"></i>
                <span class="sidebar-link-text font-semibold">Logout</span>
            </a>
        </div>
    </div>
    <div class="flex-1 main-bg p-8 overflow-y-auto custom-scrollbar">

        <div class="flex justify-between items-center mb-8 flex-shrink-0 card-bg p-6 rounded-xl shadow-lg border-t-4 border-secondary">
            <div>
                <h1 class="text-4xl font-bold text-gray-800">Dashboard Overview</h1> <p class="text-lg text-gray-500">@DateTime.Now.ToString("dddd, MMMM dd, yyyy")</p>
            </div>
            <button class="admin-btn text-lg px-5 py-2 rounded-lg font-semibold shadow-md transition duration-150 flex items-center gap-2">
                <i class="fas fa-user-shield"></i> Admin
            </button>
        </div>

        <div class="grid grid-cols-4 gap-6 mb-8 flex-shrink-0">

            <div class="card-bg p-6 rounded-xl shadow-lg flex items-center justify-between border-l-4 border-primary">
                <div>
                    <p class="text-gray-500 text-lg">Total Employees</p> <h2 class="text-3xl font-bold text-gray-800 mt-1">0</h2>
                    <p class="text-base text-gray-400">Registered users</p>
                </div>
                <div class="text-3xl text-primary-icon opacity-70">
                    <i class="fas fa-user-friends"></i>
                </div>
            </div>

            <div class="card-bg p-6 rounded-xl shadow-lg flex items-center justify-between border-l-4 border-secondary">
                <div>
                    <p class="text-gray-500 text-lg">Total Tasks</p> <h2 class="text-3xl font-bold text-gray-800 mt-1">0</h2>
                    <p class="text-base text-gray-400">All assigned tasks</p>
                </div>
                <div class="text-3xl text-secondary opacity-70">
                    <i class="fas fa-clipboard-list"></i>
                </div>
            </div>

            <div class="card-bg p-6 rounded-xl shadow-lg flex items-center justify-between border-l-4 border-green-500">
                <div>
                    <p class="text-gray-500 text-lg">Completed</p> <h2 class="text-3xl font-bold text-gray-800 mt-1">0</h2>
                    <p class="text-base text-gray-400">Finished tasks</p>
                </div>
                <div class="text-3xl text-green-500 opacity-70">
                    <i class="fas fa-check-circle"></i>
                </div>
            </div>

            <div class="card-bg p-6 rounded-xl shadow-lg flex items-center justify-between border-l-4 border-yellow-500">
                <div>
                    <p class="text-gray-500 text-lg">Pending</p> <h2 class="text-3xl font-bold text-gray-800 mt-1">0</h2>
                    <p class="text-base text-gray-400">In progress</p>
                </div>
                <div class="text-3xl text-yellow-500 opacity-70">
                    <i class="fas fa-hourglass-half"></i>
                </div>
            </div>

        </div>

        <div class="card-bg p-8 rounded-xl shadow-lg flex flex-col flex-grow min-h-[300px]">
            <h2 class="text-3xl font-bold text-gray-800 flex items-center gap-3 mb-6 pb-2 border-b">
                <i class="fas fa-chart-bar text-secondary"></i> Employee Performance
            </h2>

            <div class="flex flex-col items-center justify-center flex-grow py-12">
                <i class="fas fa-users text-gray-300 text-5xl mb-4"></i>
                <p class="text-gray-500 text-xl font-semibold mb-1">No employees yet</p> <p class="text-gray-400 text-lg text-center max-w-sm">
                    Add employees to start tracking performance
                </p>
            </div>
        </div>

    </div>
</div>

<div id="logoutModal" class="fixed inset-0 z-50 hidden modal-backdrop flex items-center justify-center transition-opacity duration-300 ease-out">
    <div class="bg-white p-8 rounded-xl shadow-2xl w-full max-w-sm transform transition-all duration-300 ease-out scale-95">

        <div class="text-center mb-6">
            <div class="flex justify-center mb-3">
                <i class="fas fa-exclamation-triangle text-secondary text-4xl"></i>
            </div>
            <h4 class="text-xl font-bold text-gray-800 mb-1">Are you sure?</h4>
            <p class="text-base text-gray-500">You will be redirected to the login page.</p>
        </div>

        <div class="space-y-3">
            <a href="/Login" class="block w-full text-center color-primary text-white py-2 rounded-lg font-semibold hover:bg-secondary transition duration-150">
                Yes, Log out
            </a>

            <button onclick="hideLogoutModal()" class="block w-full text-center border-2 border-gray-300 text-gray-700 py-2 rounded-lg font-semibold hover:bg-gray-100 transition duration-150">
                Cancel
            </button>
        </div>

    </div>
</div>

<script>
    // Get the modal element
    const modal = document.getElementById('logoutModal');

    // Function to show the modal
    function showLogoutModal(event) {
        // Stop the link from navigating immediately
        event.preventDefault();
        // Display the modal
        modal.classList.remove('hidden');
    }

    // Function to hide the modal
    function hideLogoutModal() {
        // Hide the modal
        modal.classList.add('hidden');
    }
</script>